{
  "$schema": "http://json-schema.org/draft-07/schema",
  "version": 2,
  "title": "Swift Command Executor",
  "description": "Execute Swift commands",
  "type": "object",
  "properties": {
    "command": {
      "type": "string",
      "description": "The Swift command to execute"
    },
    "args": {
      "type": "array",
      "description": "Arguments to pass to the command",
      "items": {
        "type": "string"
      }
    },
    "cwd": {
      "type": "string",
      "description": "Current working directory for the command"
    }
  },
  "required": ["command"]
}
